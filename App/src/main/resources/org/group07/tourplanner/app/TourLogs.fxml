<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.group07.tourplanner.app.controller.TourLogsController">
    <SplitPane dividerPositions="0.5" VBox.vgrow="ALWAYS" orientation="VERTICAL">
        <ToolBar>
            <Label text="%MediaOverview_Items"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="+"/>
            <Button text="-"/>
            <Button text="..."/>
        </ToolBar>

        <TableView>
            <columns>
                <TableColumn fx:id="dateColumn" text="%Logs_Date">
                    <cellValueFactory>
                        <PropertyValueFactory property="date"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="durationColumn" text="%Logs_Duration">
                    <cellValueFactory>
                        <PropertyValueFactory property="duration"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="distanceColumn" text="%Logs_Distance">
                    <cellValueFactory>
                        <PropertyValueFactory property="distance"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </SplitPane>
</VBox>