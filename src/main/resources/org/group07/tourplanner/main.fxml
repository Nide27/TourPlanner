<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.TextField?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="org.group07.tourplanner.Controller"
          gridLinesVisible="false"
          hgap="10"
          >
    <children>
        <Label style="-fx-padding: 10px" text="Tour-Planner" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="4"/>
        <Button defaultButton="true" onAction="#fileAction" GridPane.columnIndex="0" GridPane.rowIndex="1">File</Button>
        <Button defaultButton="true" onAction="#editAction" GridPane.columnIndex="1" GridPane.rowIndex="1">Edit</Button>
        <Button defaultButton="true" onAction="#optionsAction" GridPane.columnIndex="2" GridPane.rowIndex="1">Options</Button>
        <Button defaultButton="true" onAction="#helpAction" GridPane.columnIndex="3" GridPane.rowIndex="1">Help</Button>
        <TextField fx:id="searchTextField" GridPane.columnSpan="3" GridPane.rowIndex="2" GridPane.columnIndex="0">Search...</TextField>
        <Button defaultButton="true" onAction="#searchAction" text="Search..." GridPane.columnIndex="3" GridPane.rowIndex="2"/>
        <Label fx:id="testLabel" text="Test" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="4"/>
    </children>
    <columnConstraints>
        <ColumnConstraints halignment="LEFT" hgrow="NEVER" />
        <ColumnConstraints hgrow="NEVER"/>
        <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
        <ColumnConstraints halignment="LEFT" hgrow="NEVER"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="NEVER"/>
        <RowConstraints vgrow="NEVER"/>
        <RowConstraints vgrow="ALWAYS"/>
    </rowConstraints>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</GridPane>

